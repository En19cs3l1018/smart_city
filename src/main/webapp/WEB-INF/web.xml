<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>emailExists</servlet-name>
        <servlet-class>com.mycitysmart.servlet.emailExists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getOTP</servlet-name>
        <servlet-class>com.mycitysmart.servlet.getOTP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>matchOTP</servlet-name>
        <servlet-class>com.mycitysmart.servlet.matchOTP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>phoneExists</servlet-name>
        <servlet-class>com.mysmartcity.servlet.phoneExists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userRegistration</servlet-name>
        <servlet-class>com.mycitysmart.servlet.userRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mycitysmart.servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emailExists</servlet-name>
        <url-pattern>/emailExists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getOTP</servlet-name>
        <url-pattern>/getOTP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>matchOTP</servlet-name>
        <url-pattern>/matchOTP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>phoneExists</servlet-name>
        <url-pattern>/phoneExists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userRegistration</servlet-name>
        <url-pattern>/userRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
